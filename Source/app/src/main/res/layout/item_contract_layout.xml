<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="trang thai"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã HĐ : "
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/tv_contract_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dawdwda "
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Người phụ trách/đại lý : "
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/tv_agency_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dawdwda "
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng còn lại : "
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/tv_contract_last_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dawdwda "
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cam kết hoàn vốn : "
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/tv_pecent_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dawdwda "
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vốn : "
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/tv_funds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dawdwda "
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày hoàn vốn : "
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/tv_date_funds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dawdwda "
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày hoàn lợi nhuận : "
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/tv_date_comit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dawdwda "
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        >
        <TextView
            android:id="@+id/tv_contract_create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/23/1211"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textStyle="italic"
            />
    </RelativeLayout>



</LinearLayout>