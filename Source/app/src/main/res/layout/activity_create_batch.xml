<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewControler.Batch.CreateBatch.CreateBatchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusableInTouchMode="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_create_batch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_toolbar"
            android:minHeight="?attr/actionBarSize"
            android:background="#fff">
            <TextView
                android:id="@+id/tv_order_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tạo lô hàng"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:layout_gravity="center"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_black"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:tint="@color/colorPrimary"/>


        </android.support.v7.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7EA39999"
            />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            app:boxStrokeColor="@color/colorGray"
            >
            
            <EditText
                android:id="@+id/ed_create_batch_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mã lô hàng"
                android:textSize="@dimen/text_normal"
                android:textColorHint="#7EA39999"
                />

        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/db_tv_summary"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:onClick="SelectAgency"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn đại lý"
                android:textSize="@dimen/text_bold"
                android:textColor="@color/colorPrimary"
                android:padding="5dp"
                android:layout_alignParentLeft="true"
                />

            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_disclosure" />

        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            app:boxStrokeColor="@color/colorGray"
            >

            <EditText
                android:id="@+id/ed_create_batch_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Số lượng"
                android:textSize="@dimen/text_normal"
                android:textColorHint="#7EA39999"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            app:boxStrokeColor="@color/colorGray"
            >

            <EditText
                android:id="@+id/ed_create_batch_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nguồn gốc"
                android:textSize="@dimen/text_normal"
                android:textColorHint="#7EA39999"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            app:boxStrokeColor="@color/colorGray"
            >

            <EditText
                android:id="@+id/ed_create_batch_dealer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Người bán"
                android:textSize="@dimen/text_normal"
                android:textColorHint="#7EA39999"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            app:boxStrokeColor="@color/colorGray"
            >

            <EditText
                android:id="@+id/ed_create_batch_buyer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Người mua"
                android:textSize="@dimen/text_normal"
                android:textColorHint="#7EA39999"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            app:boxStrokeColor="@color/colorGray"
            >

            <EditText
                android:id="@+id/ed_create_batch_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ghi chú"
                android:textSize="@dimen/text_normal"
                android:textColorHint="#7EA39999"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            app:boxStrokeColor="@color/colorGray"
            >

            <EditText
                android:id="@+id/ed_create_batch_private_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ghi chú riêng"
                android:textSize="@dimen/text_normal"
                android:textColorHint="#7EA39999"
                />

        </android.support.design.widget.TextInputLayout>



    </LinearLayout>

</ScrollView>